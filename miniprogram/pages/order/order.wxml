<image class="bg" src="/images/icon/bg.png"></image>

<view wx:if="{{!userInfo}}">
  <login bindonLogin="onTapLogin"></login>
</view>

<view class="order-empty" wx:elif="{{orderList.length === 0}}">
  <image class="empty-image" src="/images/icon/order.png"></image>
  <view class="empty-text">空空如也</view>
</view>

<view wx:else>
  <view class="order-head">
    <image class="order-head-line" src="/images/icon/line-black.png"></image>
    <view class="order-head-text">已完成订单</view>
  </view>

  <view class="order-block" wx:for="{{orderList}}" wx:for-item="block" wx:key="id">

    <view class="order-card" wx:for="{{block.productList}}" wx:key="name">
      <image class="order-image" mode="widthFix" src="{{item.image}}"></image>
      <view class="order-info">
        <view class="order-name">{{item.name}}</view>
        <view class="order-price">￥ {{item.price}}</view>
      </view>
      <view class="order-opr">
        <navigator class="order-btn" url="/pages/add-review/add-review?productId={{item.productId}}&price={{item.price}}&name={{item.name}}&image={{item.image}}">去写评论~</navigator>
        <view class="order-count">x{{item.count}}</view>
      </view>
    </view>

  </view>
</view>